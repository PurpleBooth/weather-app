{% verbatim %}
<!DOCTYPE html>
<html lang="en" ng-app="weatherApp">
<head><title>Weather</title>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.js"></script>
    <script src="/javascripts/angular/app.js"></script>
</head>
<body>
<div ng-view>
    <div ng-controller="IndexController"><h1></h1>
        <h1>Weather</h1>
        <input type="text" id="location" ng-model="location"
               ng-change="updateWeather(location)">
        <h2 class="weather">{{ weatherText }}</h2>
    </div>
</div>
</body>
</html>
{% endverbatim %}
